<% include partials/header %>

<div class="wrapper">
  <h3 class="list_all">List of Articles</h3>
  <% user.forEach(user => { %>
  <div class="users">
    <div class="img_container">
      <img id="profile" src="/images/cont.png" alt="your image" />
    </div>
    <div class="userinfo">
      <h1 class="author_name">
        Written by
        <span class="author_name_prefix">@[<%= user.author_name %>]</span>
      </h1>
      <h2 class="author_introduction"><%= user.author_introduction %></h2>
    </div>
  </div>
  <div class="user_bar">
    <div class="comments">
      <img class="comments_logo" src="/images/comments_logo.png" />
    </div>
    <span class="comments_count">0</span>
    <div class="likes">
      <img class="likes_logo" src="/images/likes_logo.png" />
    </div>
    <span class="likes_count"><%= user.likes %></span>
   
        <a class="arrow_articleinfo" href="/users/<%= user.id %>">〉〉</a>

  </div>

  <% }) %>
  <a  href="/users/create"><button class="btn">Create Article</button></a>
</div>

<% include partials/footer %>
